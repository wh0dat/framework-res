            <com.android.internal.widget.NotificationActionListLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/actions" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/notification_action_list_height" android:paddingEnd="4dp"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
