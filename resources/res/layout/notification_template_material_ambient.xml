<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/status_bar_latest_event_content" android:tag="ambient" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/notification_extra_margin_ambient" android:paddingEnd="@dimen/notification_extra_margin_ambient">
    <include android:theme="@style/Theme.Material.Notification.Ambient" layout="@layout/notification_template_ambient_header"/>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:id="@+id/notification_action_list_margin_target" android:paddingTop="4dp" android:paddingBottom="6dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/notification_content_margin_top" android:layout_marginBottom="@dimen/notification_action_list_height">
        <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:id="@+id/notification_main_column" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/notification_min_content_height" android:layout_weight="1" android:paddingStart="@dimen/notification_content_margin_start" android:paddingEnd="@dimen/notification_content_margin_end">
            <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Title" android:textSize="@dimen/notification_ambient_title_text_size" android:textColor="#ffffffff" android:ellipsize="marquee" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/title" android:fadingEdge="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif"/>
