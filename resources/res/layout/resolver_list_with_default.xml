        </LinearLayout>
        <View android:background="?attr/dividerVertical" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
    <ListView android:scrollbarStyle="outsideOverlay" android:id="@+id/resolver_list" android:background="@color/white" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@null" android:nestedScrollingEnabled="true" android:elevation="8dp"/>
</com.android.internal.widget.ResolverDrawerLayout>
