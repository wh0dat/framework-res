                <TextView android:textAppearance="?attr/textAppearanceButton" android:textColor="?attr/textColorPrimary" android:ellipsize="marquee" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:minLines="1" android:layout_marginEnd="?attr/listPreferredItemPaddingEnd"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:id="@+id/button_bar" android:background="@color/white" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:measureWithLargestChild="true" android:layoutDirection="locale" android:paddingStart="12dp" android:paddingEnd="12dp" android:elevation="8dp" android:layout_alwaysShow="true" style="?attr/buttonBarStyle">
