<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="ifContentScrolls">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textColor="?attr/textColorPrimary" android:id="@+id/pin_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:inputType="numberPassword" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            <TextView android:gravity="center" android:id="@+id/pin_error_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="@string/restr_pin_incorrect"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/buttonPanel" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="?attr/dividerHorizontal" android:minHeight="@dimen/alert_dialog_button_bar_height" android:showDividers="beginning" android:dividerPadding="0dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:measureWithLargestChild="true" android:layoutDirection="locale" style="?attr/buttonBarStyle">
                <Button android:textSize="14sp" android:layout_gravity="start" android:id="@+id/pin_cancel_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/alert_dialog_button_bar_height" android:text="@string/cancel" android:maxLines="2" android:layout_weight="1" style="?attr/buttonBarButtonStyle"/>
                <Button android:textSize="14sp" android:layout_gravity="end" android:id="@+id/pin_ok_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/alert_dialog_button_bar_height" android:text="@string/ok" android:maxLines="2" android:layout_weight="1" style="?attr/buttonBarButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
