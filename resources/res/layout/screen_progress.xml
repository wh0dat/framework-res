    </RelativeLayout>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="0dp" android:foreground="?attr/windowContentOverlay" android:layout_weight="1" android:foregroundGravity="top|left|right|center_vertical|center_horizontal|fill_horizontal|center"/>
</LinearLayout>
